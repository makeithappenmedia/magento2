<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    <referenceContainer name="page.wrapper">

        <referenceBlock name="header.container" remove="true" />
        <referenceBlock name="footer-container" remove="true" />

        <container name="header.container.narda" as="header_container_narda" label="Page Header Container" htmlTag="header" htmlClass="page-header narda-mage" before="main.content"/>
        <container name="page.top" as="page_top" label="After Page Header" after="header.container.narda"/>
        <container name="footer-container.narda" as="footer_narda" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer narda-mage"/>

    </referenceContainer>
</layout>
